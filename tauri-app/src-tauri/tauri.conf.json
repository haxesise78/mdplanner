{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MD Planner",
  "version": "1.0.0",
  "identifier": "com.studiowebux.mdplanner",
  "build": {
    "frontendDist": "../../src/static",
    "devUrl": "http://localhost:8003",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "MD Planner",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
